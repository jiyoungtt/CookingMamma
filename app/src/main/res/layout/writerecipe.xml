<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">


  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toAddrecipe"
        android:text="CANCEL"
        android:background="@color/background"
        android:layout_gravity="left"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
<!--
    <Button
        android:id="@+id/btn_updaterecipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="UPDATE"
        android:onClick="saveRecipe"
        android:background="@color/background"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

-->
    <Button
        android:id="@+id/btn_saverecipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="SAVE"
        android:onClick="saveRecipe"
        android:background="@color/background"/>

        <!--android:onClick="saveRecipe"-->



    <!--레시피 저장 버튼-->

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_ingredient"
        android:hint="들어가는 식재료를 적어보아요~"
       />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_addingredient"
        android:text="ADD"
        android:background="@color/background"
        android:onClick="addIngredient"
        />

  </LinearLayout>


  <LinearLayout
      android:id="@+id/writelinear"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
  </LinearLayout>



  <!--글자색을 흰색으로 변경-->

<TextView
      android:id="@+id/ingredient_textview"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textStyle="bold"
      android:background="@color/white"
      android:textColor="@color/white"
      android:padding="8dp"/>




  <EditText
      android:background="@color/write"
      android:id="@+id/recipe_titile"
      android:hint="나만의 요리의 제목은?"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

  <TextView

      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textStyle="bold"
      android:background="@color/white"
      android:textColor="@color/white"
      android:padding="8dp"/>


  <EditText
      android:background="@color/write"
      android:id="@+id/recipe_content"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:hint="당신의 시크릿 레시피는?"/>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:id="@+id/photo"/>


  <Button
      android:id="@+id/btn_camera"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@color/background"
      android:text="사진추가"/>




</LinearLayout>
